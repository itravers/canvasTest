extends layout

block content
  script(src='/javascripts/jquery.min.js')
  script(src='/javascripts/angular.js')
  script(src='/javascripts/networkObjects/NetworkNode.js')
  script(src='/javascripts/networkObjects/Battery.js')
  script(src='/javascripts/networkObjects/TransmissionLine.js')
  script(src='/javascripts/networkObjects/Resistor.js')
  script(src='/javascripts/networkObjects/PowerConsumer.js')
  script(src='/javascripts/networkObjects/PowerSupply.js')
  script(src='/javascripts/networkTest.js')
  script(src='/javascripts/networkTestCanvas.js')
  div#networkTestApp(data-ng-app="networkTestApp", data-ng-controller="networkTestCtrl")
    h1= title
    p Welcome to #{title}
    |   
    div.calculateBox
      form(name="calculate", data-ng-init="timeElapsed='1000'")
        input(type="range", min="1", max="1000", value="1000", name="timePassed", id="timePassed", data-ng-model="timeElapsed").
        p {{timeElapsed}} 
      button(data-ng-click="networkData.calculateClick()")#calculate.
        Calculate
    div.getData
      form(name="getData")
        button(data-ng-click="networkData.getDataClick(item, $event)")#getData.
          Get Data
    div.drawCanvas
      form(name="drawCanvas")
        button(data-ng-click="networkData.drawNetworkClick(item, $event)")#drawCanvas.
          Draw Canvas
    canvas#canvas
    div#powerSupplies
        table
          PowerSupplies
          thead
            tr
              th totalCharge
              th _id
              th type
              th location
              th totalPower
              th chargeSupplied
              th connections
              th charges
              th chargeSet
          tBody
            tr(data-ng-repeat="supply in networkData.powerSupplies")
              td
                {{supply.getTotalCharge()}}
              td 
                {{supply.getID()}}
              td
                {{supply.getType()}}
              td 
                {{supply.getLocation()}}
              td
                {{supply.getTotalPower()}}
              td
                {{supply.getChargeSupplied()}}
              td
                {{supply.getConnections()}}
              td
                {{supply.getCharges()}}
              td
                {{supply.getChargedSet()}}
    div#powerConsumers
      p powerConsumers
        ul
          li(ng-repeat="consumer in networkData.powerConsumers").
            {{consumer}}
    div#batteries
      p batteries
        ul
          li(ng-repeat="battery in networkData.batteries").
            {{battery}}
    div#connectors
      p connectors
        ul
          li(ng-repeat="connector in networkData.connectors").
            {{connector}}
    div#resistors
      p resistors
        ul
          li(ng-repeat="resistor in networkData.resistors").
            {{resistor}}
    div#transmissionLines
      p transmissionLines
        ul
          li(ng-repeat="tLine in networkData.transmissionLines").
            {{tLine}}
    
    
 
    
        